@model IEnumerable<PuntoCuatro.Models.Ensayo>

@{
    ViewData["Title"] = "Ensayos";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Ensayos</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary me-2">+ Nuevo ensayo</a>
        <a asp-controller="Muestras" asp-action="Create" class="btn btn-success">+ Nueva muestra</a>
    </div>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Muestra</th>
            <th>Determinación</th>
            <th>Resultado</th>
            <th>Fecha de análisis</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Muestra?.Nombre</td>
                <td>@item.Tipo</td>  @* Ojo: si en el modelo renombraste a EnsayoTipo o Determinacion, cambiá aquí *@
                <td>@item.Resultado</td>
                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Ver</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
