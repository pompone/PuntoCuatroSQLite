@model IEnumerable<PuntoCuatroSQLiteSQLite.Models.Muestra>
@{
    ViewData["Title"] = "Muestras";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Muestras</h1>
    <div>
        <a asp-action="Create" class="btn btn-success me-2">+ Nueva muestra</a>
        <a asp-controller="Ensayos" asp-action="Create" class="btn btn-primary">+ Nuevo ensayo</a>
    </div>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Matriz</th>
            <th>Fecha de toma</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Matriz</td>
                <td>@item.FechaToma.ToString("dd/MM/yyyy")</td>
                <td class="text-end">
                    <div class="btn-group btn-group-sm" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Ver</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

