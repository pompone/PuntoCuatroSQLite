@model PuntoCuatro.Models.Ensayo

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-2">Carga de ....</h1>
<h4 class="text-muted">Ensayo</h4>
<hr />

<div class="row">
    <!-- Más ancha en todas las resoluciones -->
    <div class="col-12 col-md-10 col-lg-8 col-xl-7 mx-auto">
        <div class="card shadow-lg border-0 rounded-3 mb-4 bg-white ensayo-card">
            <div class="card-body p-4 p-lg-5">
                <form asp-action="Create" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="MuestraId" class="form-label">Muestra de</label>
                        <select asp-for="MuestraId" class="form-select form-select-lg" asp-items="ViewBag.MuestraId"></select>
                        <span asp-validation-for="MuestraId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tipo" class="form-label"></label>
                        <input asp-for="Tipo" class="form-control form-control-lg" />
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Resultado" class="form-label"></label>
                        <input asp-for="Resultado" class="form-control form-control-lg" />
                        <span asp-validation-for="Resultado" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Fecha" class="form-label"></label>
                        <input asp-for="Fecha" type="date" class="form-control form-control-lg" />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Guardar</button>
                        <button type="button" class="btn btn-success btn-lg" onclick="history.back()">Volver</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

